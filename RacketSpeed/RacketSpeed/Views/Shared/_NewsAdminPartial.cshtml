@model ICollection<PostViewModel>

<a asp-controller="News" asp-action="Add" style="width:100%;" class="btn btn-lg btn-danger btn-block">Add a Post</a>
<hr />
<h2 class="text-center">Recent Posts</h2>
<div class="row row-cols-auto mt-5">
    @foreach (var post in Model)
    {
        <div class="col-12 mt-2 mb-2">
            <div class="card"  style="background-color: #F5F7FD">
                <div class="card-body">
                    <h3 class="card-title">@post.Title</h3>
                </div>
                <div class="card-footer">
                    <a asp-controller="News" asp-action="Details" asp-route-postId="@post.Id" class="btn btn-dark">Details</a>
                    <a asp-controller="News" asp-action="Edit" asp-route-postId="@post.Id" class="btn btn-dark">Edit</a>
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#player-@post.Id">
                        Delete
                    </button>
                    <div class="modal fade" id="player-@post.Id" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="modalLabel">Post: @post.Title</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to delete this Post?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    <form>
                                        <button type="submit" formmethod="post" asp-controller="News" asp-action="Delete" asp-route-postId="@post.Id" class="btn btn-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
        </div>
    }
</div>
