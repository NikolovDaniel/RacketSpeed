@model ICollection<PlayerViewModel>

<a asp-controller="Player" asp-action="Add" style="width:100%;" class="btn btn-lg btn-danger btn-block">Add a Player</a>
<hr />
<h2 class="text-center">Club Players</h2>
<div class="row row-cols-auto mt-5">
    @{
        int counter = 1;

        foreach (var player in Model)
        {
            <div class="col-12 col-md-6 mt-2 mb-2">
                <div class="card" style="background-color: #F5F7FD">
                    <div class="card-body">
                        <h3 class="card-title">@player.FirstName @player.LastName</h3>
                        <p class="card-text">Birthdate: @player.BirthDate.ToShortDateString()</p>
                        <p class="card-text">Created On: @player.CreatedOn.ToShortDateString()</p>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Player" asp-action="Details" asp-route-playerId="@player.Id" class="btn btn-dark">Details</a>
                        <a asp-controller="Player" asp-action="Edit" asp-route-playerId="@player.Id" class="btn btn-dark">Edit</a>
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#player-@player.Id">
                            Delete
                        </button>
                        <div class="modal fade" id="player-@player.Id" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="modalLabel">Player: @player.FirstName @player.LastName</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete this Player?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <form>
                                            <button type="submit" formmethod="post" asp-controller="Player" asp-action="Delete" asp-route-playerId="@player.Id" class="btn btn-danger">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
            </div>
            counter++;
        }
    }
</div>

<script language="javascript" type="text/javascript">function fnConfirmDelete() {
        return confirm(`Are you sure you want to delete this Player?`);
    }</script>
