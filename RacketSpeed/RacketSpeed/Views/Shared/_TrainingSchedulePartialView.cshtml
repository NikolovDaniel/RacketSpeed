@model IEnumerable<TrainingViewModel>
    <style>
        h2 {
            color: white;
        }

        .lead {
            color: #DC5B67;
        }
    </style>
    <div class="row w-100 min-vh-100 d-flex justify-content-center align-items-center mt-5">
        <div class="col-12 col-md-6 col-lg-3 mt-4 mt-md-0 mt-lg-0">
            <h2 class="card-title text-center">Понеделник</h2>
            @foreach (var training in Model.Where(t => t.DayOfWeek == "Понеделник").OrderBy(t => t.Start.Hour))
            {
                <p class="lead text-center fs-4" style="color: #DC5B67;"> @($"{training.Start.ToString("HH:mm")} - {training.End.ToString("HH:mm")}")</p>
            }
        </div>
