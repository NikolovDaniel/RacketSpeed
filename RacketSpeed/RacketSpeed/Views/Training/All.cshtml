@model IEnumerable<TrainingViewModel>

@{
    if (Model.Count() <= 0)
    {
        ViewData["contentType"] = "Тренировки";
        @await Html.PartialAsync(@"~/Views/Shared/_NoContentPartialView.cshtml", ViewData["contentType"]);
    }
    else
    {
        <div class="animatedHeader bg-danger">
            <h2 class="text-center">Тренировки за @ViewData["Title"]</h2>
        </div>
        <section class="sectionCoaches">
            <div class="container">
                <div class="row d-flex justify-content-center">
                    @await Html.PartialAsync(@"~/Views/Shared/_TrainingSchedulePartialView.cshtml", Model)
                </div>
            </div>
        </section>
    }
}