@model ICollection<PlayerViewModel>

@if (User?.IsInRole("Administrator") ?? false)
{
    ViewData["Title"] = "Players (Admin)";
    @await Html.PartialAsync(@"~/Views/Shared/_PlayersAdminPartial.cshtml", Model);
}
else
{
    ViewData["Title"] = "Club Players";
    @if (Model.Count > 0)
    {
        <section>
            <h2 class="text-center">Club Players</h2>
            <div class="container">
                @{
                    <hr />
                    <div class="row row-cols-auto mt-5">
                        @foreach (var player in Model)
                        {
                            <div class="col-12 text-center" style="max-width:fit-content;">
                                <div class="row">
                                    <div class="col-12 col-lg-4 text-center">
                                        <div class="title shadow-sm">
                                            <p class="fw-bold fs-4">@player.FirstName @player.LastName</p>
                                        </div>
                                        <div class="content">
                                            <p class="lead">
                                                Age: @(Math.Floor((DateTime.Now - player.BirthDate).TotalDays / 365.2425))
                                            </p>
                                            <p class="lead">
                                                Place of birth: @player.BirthPlace
                                            </p>
                                            <p class="lead">
                                                Height: @player.Height
                                            </p>
                                            <p class="lead">
                                                Playing Hand: @player.PlayingHand
                                            </p>
                                            <p class="lead">
                                                Part of RacketSpeed since: @player.CreatedOn.ToShortDateString()
                                            </p>
                                        </div>
                                    </div>
                                    <div class="col-12 col-lg-4">
                                        <div class="image ratio ratio-4x3">
                                            <img class="img-fluid rounded" src="@player.ImageUrl" />
                                        </div>
                                    </div>
                                    <div class="col-12 col-lg-4">
                                        <div class="content">
                                            <p>@player.Biography</p>
                                        </div>
                                    </div>
                                </div>
                                <hr />
                            </div>
                        }
                    </div>
                }
            </div>
        </section>
    }
    else
    {
        <p>There are no players!</p>
    }
}
