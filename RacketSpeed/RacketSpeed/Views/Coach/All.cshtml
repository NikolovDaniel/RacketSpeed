@model ICollection<CoachViewModel>

@if (User?.IsInRole("Administrator") ?? false)
{
    <a role="button">Add new Coach</a>
}

@if (Model.Count > 0)
{
    foreach (var coach in Model)
    {
        <div class="row">
            <div class="card">
                <div class="card-title">
                    @coach.FirstName @coach.LastName
                </div>
                <div class="card-body">
                    @coach.Biography
                </div>
                @if (User?.IsInRole("Administrator") ?? false)
                {
                    <div class="card-footer">
                        <a role="button">Edit</a>
                        <a role="button">Delete</a>
                    </div>
                }
                else
                {
                    <div class="card-footer">
                        <a role="button">Details</a>
                    </div>
                }
                 
            </div>
        </div>
    }
}
else
{
    <p>There are no coaches!</p>
}