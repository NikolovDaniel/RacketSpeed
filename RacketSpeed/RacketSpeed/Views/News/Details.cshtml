@model PostViewModel

@{
    ViewData["Title"] = "Post Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="titleRow row d-flex">
                <div class="col-12">
                    <p class="fs-2 text-center">@Model.Title</p>
                </div>
            </div>
            <div class="contentRow row mt-3">
                <div class="col-12">
                    <p class="lead text-center">@Model.Content</p>
                </div>
            </div>
            <div class="imagesRow row mt-3">
                @foreach (var img in Model.ImageUrls)
                {
                    <div class="col-12 col-sm-6 col-md-6 col-lg-4 mt-2 mt-lg-0">
                        <div class="ratio ratio-4x3">
                            <img class="rounded" src="@img" alt="Club Image">
                        </div>
                    </div>
                }
            </div>
        </div>
       <div class="col-md-4">
           
       </div>
    </div>
</div>