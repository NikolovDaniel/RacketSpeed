@model ICollection<PostViewModel>

@if (User?.IsInRole("Administrator") ?? false)
{
    <a role="button">Add new Post</a>
}

@if (Model.Count > 0)
{
    foreach (var post in Model)
    {
        <div class="row">
            <div class="card">
                <div class="card-title">
                    @post.Title
                </div>
                <div class="card-body">
                    @post.Content
                </div>
                @if (User?.IsInRole("Administrator") ?? false)
                {
                        <div class="card-footer">
                            <a role="button">Edit</a>
                            <a role="button">Delete</a>
                        </div>
                }
            </div>
        </div>
    }
}
else
{
    <p>There are no posts!</p>
}